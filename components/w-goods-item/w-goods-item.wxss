.goods-item {
  padding: 10rpx 10rpx 0 10rpx;
}

.goods-img {
  width: 100%;
  border-radius: 10rpx;
}

.goods-title {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 10rpx;
}

.goods-desc {
  display: flex;
  justify-content: space-evenly;
  font-size: 26rpx;
}
.goods-pri {
  color: #f60;
  font-size: 30rpx;
}
.goods-cfav{
  position: relative;
}
.favor-img{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: -30rpx;
  top: 50%;
  transform: translateY(-50%);
}