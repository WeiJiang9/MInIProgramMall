.info {
  display: flex;
  border-bottom: 30rpx solid #f8f8f8;
}

.info-item {
  flex: 1;
  border-right: 2px solid #f8f8f8;
  text-align: center;
  padding: 60rpx 50rpx;
  font-size: 28rpx;
}

.info-item:last-child {
  border-right: none;
}
.count{
  color: #ff5f3e;
  font-size: 40rpx;
  font-weight: 600;
}