.cart-item{
  padding: 20rpx;
  display: flex;
}
.cart-img{
  width: 200rpx;
  display: flex;
  align-items: center;
}
.img-info{
  width: 180rpx;
  height: 240rpx;
  margin-left: 10rpx;
}
.cart-info{
  padding: 0 30rpx;
  width: 470rpx;
}
.title{
  font-size: 38rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 600;
  line-height: 80rpx;
}
.desc{
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.price-count{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.price{
  color: red;
  font-size: 40rpx;
  color: #ff5777;
}