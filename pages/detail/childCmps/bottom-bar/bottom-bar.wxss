.bottom-bar{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  height: 120rpx;
  background-color: #fff;
}
.bottom-left{
  flex: 0.9;
  display: flex;
  padding-top: 16rpx;
}
.left-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  justify-content: space-evenly;
}
.left-img{
  width: 52rpx;
  height: 52rpx;
}
.bottom-right{
  flex:1.1;
  display: flex;
}
.right-item{
  flex:1;
  line-height: 120rpx;
  text-align: center;
  font-size: 34rpx;
}
.bottom-right .right-item:first-child{
  background-color: #ffe817;
}
.bottom-right .right-item:last-child{
  background-color: #ff5777;
}