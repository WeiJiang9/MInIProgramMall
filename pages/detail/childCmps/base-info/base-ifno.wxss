.base-info{
  padding: 16rpx;
  border-bottom: 8rpx solid #ddd;
}
.base-title{
  font-size: 34rpx;
  margin: 10rpx;
}
.pri-old{
  font-size: 24rpx;
  text-decoration: line-through;
  margin-right: 20rpx;
}
.pri-new{
  font-weight: bold;
  font-size: 40rpx;
  color: #ff5777;
  margin-right: 20rpx;
}
.pri-dis{
  padding: 3rpx 10rpx;
  background-color: deeppink;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.base-col{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #ccc;
  line-height: 80rpx;
  margin-top: 20rpx;
  border-bottom: 2rpx solid #ccc;
}
.base-ser{
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  margin-top: 20rpx;
}
.ser-info image{
  width: 26rpx;
  height: 26rpx;
  vertical-align: center;
  margin-right: 5rpx;
}
.ser-info{
  font-size: 22rpx;
  color: #ccc;
}